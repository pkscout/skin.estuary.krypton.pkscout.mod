<?xml version="1.0" encoding="UTF-8"?>
<addon id="skin.estuary.krypton.pkscout.mod" version="1.1.1" name="Estuary Mod (pkscout)" provider-name="pkscout, phil65, Ichabod Fletchman">
	<requires>
		<import addon="xbmc.gui" version="5.12.0"/>
		<import addon="script.artistslideshow" version="2.0.0"/>
	</requires>
	<extension point="xbmc.gui.skin" debugging="false">
		<res width="1920" height="1440" aspect="4:3" default="false" folder="xml" />
		<res width="1920" height="1280" aspect="3:2" default="false" folder="xml" />
		<res width="1920" height="1200" aspect="16:10" default="false" folder="xml" />
		<res width="1920" height="1080" aspect="16:9" default="true" folder="xml" />
		<res width="2560" height="1080" aspect="21:9" default="false" folder="xml" />
	</extension>
	<extension point="xbmc.addon.metadata">
		<news>1.1.1
		- fixes from Estuary in Kodi 17.1 RC1
		</news>
		<summary lang="en_US">pkscout's Mod of Estuary skin by phil65 and Piers. (Kodi's default skin)</summary>
		<description lang="en_US">Mod of the Estuary skin to support Artist Slideshow and some customization of the home screen.</description>
		<disclaimer lang="en_US">Limited support provided for this mod.</disclaimer>
		<platform>all</platform>
